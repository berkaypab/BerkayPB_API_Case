<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Automation Test Suite for PetStore Pet APIs"
	data-provider-thread-count="3">
	<listeners>
		<listener
			class-name="com.petstore.listeners.AnnotationTransformer" />
	</listeners>

	<!-- thread-count="2" parallel ="methods" -->
	<!--These values are coming from Maven command (Configured in pom.xml) -->
	<test name="Regression Tests execution for PetStore Pet APIs">
		<packages>
			<package name="com.petstore.tests." />
		</packages>
	</test>
</suite>
